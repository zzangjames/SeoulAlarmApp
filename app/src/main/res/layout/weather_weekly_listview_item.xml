<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="80dp"
    android:layout_height="150dp"
    android:gravity="center_horizontal"
    android:paddingBottom="20dp"
    android:paddingTop="20dp">

    <TextView
        android:id="@+id/txtWeeklyItemDay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="지금"
        android:textSize="11dp"
        android:textStyle="bold"
        android:textColor="@color/textBlack"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal"/>

    <ImageView
        android:id="@+id/imgWeeklyItemIcon"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:src="@drawable/icon03"
        android:layout_below="@id/txtWeeklyItemDay"/>
    <TextView
        android:id="@+id/txtWeeklyHighTemper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="23°"
        android:textSize="11dp"
        android:textColor="@color/textBlack"
        android:layout_below="@+id/imgWeeklyItemIcon"
        android:gravity="center_horizontal"/>
    <TextView
        android:id="@+id/txtWeeklyLowTemper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="23°"
        android:textSize="11dp"
        android:textColor="#909090"
        android:layout_below="@+id/txtWeeklyHighTemper"
        android:gravity="center_horizontal"
        android:layout_marginTop="7dp"/>

</RelativeLayout>